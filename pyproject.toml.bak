[tool.poetry]
name = "livasil-requirements-agent"
version = "0.1.0"
description = "Agents & tools for requirement classification (ASIL) and documentation automation"
authors = ["<nume> <<email>>"]
packages = [{ include = "livasil", from = "src" }]

[tool.poetry.dependencies]
python = ">=3.12,<3.15"
typer = { version = "^0.20.0", extras = ["all"] }
pandas = "^2.3.3"
pymupdf = "^1.26.5"
python-docx = "^1.2.0"
faiss-cpu = { version = "^1.12.0", python = ">=3.9,<3.15" }
sentence-transformers = "^5.1.2"
psutil = "^7.1.1"
rich = "^14.2.0"
pydantic = "^2.12.3"

[tool.poetry.group.dev.dependencies]
ruff = "^0.14.1"
black = "^25.9.0"
pytest = "^8.4.2"
pre-commit = "^4.3.0"

[tool.poetry.scripts]
livasil = "livasil.cli:app"

[tool.black]
line-length = 100
target-version = ["py310","py311","py312"]

[tool.ruff]
line-length = 100
lint.select = ["E","F","I","B","W","UP"]
lint.ignore = ["E203","E266","E501"]

[tool.pytest.ini_options]
minversion = "7.0"
addopts = "-q"
testpaths = ["tests"]

[build-system]
requires = ["poetry-core>=1.6.1"]
build-backend = "poetry.core.masonry.api"
